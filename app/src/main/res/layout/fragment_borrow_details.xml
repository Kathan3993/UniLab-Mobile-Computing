<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.laptop_borrowing.BorrowDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- First Name -->
        <TextView
            android:id="@+id/simpleTextViewFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="First Name"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutFirstName"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextViewFirstName"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewLastName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextFirstName"
                android:background="@drawable/edit_text_design"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name -->
        <TextView
            android:id="@+id/simpleTextViewLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Last Name"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutLastName"
            app:layout_constraintVertical_bias="1.0" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutLastName"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf= "@+id/simpleTextViewLastName"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewStreet"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLastName"
                android:background="@drawable/edit_text_design"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Street # -->
        <TextView
            android:id="@+id/simpleTextViewStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Apt / Street #"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutLastName"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutStreet"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutStreet"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextViewStreet"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewCity"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextStreet"
                android:background="@drawable/edit_text_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>


        <!-- City / Town -->
        <TextView
            android:id="@+id/simpleTextViewCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="City / Town"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutCity"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutStreet"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutCity"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextViewCity"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewState"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCity"
                android:background="@drawable/edit_text_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>


        <!-- Province / State -->
        <TextView
            android:id="@+id/simpleTextViewState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Province / State"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutCity"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutState"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutState"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"

            android:hint="Please select the state/province"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextViewState"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewPostal"
            >

            <AutoCompleteTextView
                android:id="@+id/AutoCompleteTextviewProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_design"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <!-- Postal Code -->
        <TextView
            android:id="@+id/simpleTextViewPostal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Postal Code"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutState"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutPostal"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutPostal"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextViewPostal"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewPhoneNumber"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPostal"
                android:background="@drawable/edit_text_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number -->
        <TextView
            android:id="@+id/simpleTextViewPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Phone Number"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutPostal"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutPhoneNumber"
            app:layout_constraintVertical_bias="1.0" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutPhoneNumber"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf= "@+id/simpleTextViewPhoneNumber"
            app:layout_constraintBottom_toTopOf="@+id/simpleTextViewEmail"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPhone"
                android:inputType="phone"
                android:background="@drawable/edit_text_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <TextView
            android:id="@+id/simpleTextViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Email"
            android:textColor="#0B0A0A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutPhoneNumber"
            app:layout_constraintBottom_toTopOf="@+id/TextInputLayoutEmail"
            app:layout_constraintVertical_bias="1.0" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutEmail"
            app:helperText="@string/required"
            app:helperTextTextColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf= "@+id/simpleTextViewEmail"
            app:layout_constraintBottom_toTopOf="@+id/buttonSearch"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEmail"
                android:background="@drawable/edit_text_design"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="30dp"
            android:text="Continue"
            android:backgroundTint="@android:color/holo_orange_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutEmail" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="70dp"
            android:text="Cancel"
            android:backgroundTint="#878480"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutEmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>